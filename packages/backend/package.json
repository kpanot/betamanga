{
  "name": "@betamanga/backend",
  "version": "0.0.0-placeholder",
  "author": {
    "name": "Kilian Panot",
    "email": "kilian.panot@gmail.com",
    "url": "https://github.com/kpanot"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug=0.0.0.0:9229 --watch",
    "start:debug:with-seed": "yarn run seed && yarn run start:debug --preserveWatchOutput=true",
    "start:prod": "pm2 start",
    "seed": "ts-node db/seed.ts -P ./tsconfig.seed.json --swc",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "~10.4.0",
    "@nestjs/config": "~3.3.0",
    "@nestjs/core": "~10.4.0",
    "@nestjs/jwt": "~10.1.1",
    "@nestjs/mongoose": "~10.0.1",
    "@nestjs/passport": "~10.0.1",
    "@nestjs/platform-express": "~10.4.0",
    "@nestjs/swagger": "~7.1.10",
    "bcryptjs": "~2.4.3",
    "mongoose": "~7.5.0",
    "passport": "~0.6.0",
    "passport-jwt": "~4.0.1",
    "passport-local": "~1.0.0",
    "reflect-metadata": "~0.1.13",
    "rimraf": "~5.0.1",
    "rxjs": "~7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "~10.4.0",
    "@nestjs/schematics": "~10.2.0",
    "@nestjs/testing": "~10.4.0",
    "@types/bcryptjs": "~2.4.3",
    "@types/express": "~4.17.17",
    "@types/jest": "~29.5.4",
    "@types/node": "~20.5.7",
    "@types/passport-jwt": "~3.0.9",
    "@types/passport-local": "~1.0.35",
    "@types/supertest": "~2.0.12",
    "@typescript-eslint/eslint-plugin": "~6.5.0",
    "@typescript-eslint/parser": "~6.5.0",
    "eslint": "~8.48.0",
    "eslint-config-prettier": "~9.0.0",
    "eslint-config-standard-with-typescript": "~39.0.0",
    "eslint-plugin-import": "~2.28.1",
    "eslint-plugin-n": "~16.0.2",
    "eslint-plugin-prettier": "~5.0.0",
    "eslint-plugin-promise": "~6.1.1",
    "jest": "~29.6.4",
    "pm2": "~5.3.0",
    "prettier": "~3.0.3",
    "source-map-support": "~0.5.21",
    "supertest": "~6.3.3",
    "ts-jest": "~29.1.1",
    "ts-loader": "~9.4.4",
    "ts-node": "~10.9.1",
    "tsconfig-paths": "~4.2.0",
    "type-fest": "~4.3.1",
    "typescript": "~5.2.2",
    "webpack": "~5.88.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "~.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
